package {	import flash.events.Event;	import flash.events.MouseEvent;	import flash.display.MovieClip;	import com.greensock.TweenLite;	import com.greensock.plugins.*;TweenPlugin.activate([GlowFilterPlugin]);	public class HelpIcon extends MovieClip {		private var helpInfo:HelpInfo;		public function HelpIcon() {			this.addEventListener(Event.ADDED_TO_STAGE, onAddedToStage);		}		private function onAddedToStage(event:Event):void {			this.addEventListener(Event.REMOVED_FROM_STAGE, onRemovedFromStage);			this.addEventListener(MouseEvent.ROLL_OVER, onMouseOver);			this.addEventListener(MouseEvent.ROLL_OUT, onMouseOut);			this.removeEventListener(Event.ADDED_TO_STAGE, onAddedToStage);		}		private function onRemovedFromStage(event:Event):void {			this.removeEventListener(Event.REMOVED_FROM_STAGE, onRemovedFromStage);			this.removeEventListener(MouseEvent.ROLL_OVER, onMouseOver);			this.removeEventListener(MouseEvent.ROLL_OUT, onMouseOut);		}		private function onMouseOver(event:MouseEvent):void {			this.buttonMode = true;			this.helpInfo = new HelpInfo();			this.addChild(this.helpInfo);			this.helpInfo.x = -100;			this.helpInfo.y = 170;			TweenLite.from(this.helpInfo, 0.5, {scaleX:0.1, scaleY:0.1, alpha:0});		}		private function onMouseOut(event:MouseEvent):void {			TweenLite.to(this.helpInfo, 0.5, {scaleX:0.1, scaleY:0.1, alpha:0,onComplete:this.removeChild, onCompleteParams:[this.helpInfo]});			this.helpInfo = null;					}	}}